{
  "name": "User A Chrome Extension",
  "description": "User A Chrome Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "bath_logo.png",
    "default_title": ""
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "history",
    "notifications",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5173/*"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "side_panel.html",
    "content_security_policy": {
      "script_src": "'self'",
      "object_src": "'self'"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/"],
      "js": ["content_dashboard_a.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://localhost:5174/"],
      "js": ["content_email.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["information_popup.html",
                    "information_popup.css",
                    "menu_popup.html",
                    "menu_popup.css"],
      "matches": ["http://localhost:5174/*"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:5173/*"
    ]
  }
}
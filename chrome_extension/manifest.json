{
  "name": "User A Chrome Extension",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "bath_logo.png",
    "default_title": "Click to open side panel"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "history",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5173/*"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "side_panel.html",
    "content_security_policy": {
      "script_src": "'self'",
      "object_src": "'self'"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_dashboard_a.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://localhost:5174/"],
      "js": ["content_email.js"]
    }
  ]
}